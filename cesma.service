[Unit]
Description=CESMA HTTP Service
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=root
WorkingDirectory=/home/nils/cesma_laravel
ExecStart=/usr/bin/php /home/nils/cesma_laravel/artisan serve --host 0.0.0.0 --port 8080

[Install]
WantedBy=multi-user.target
