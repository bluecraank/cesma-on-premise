{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "IP Authorization", 
    "title": "IpAuth", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "id":
        {
            "description": "ID of the IP auth rule", 
            "type": "integer", 
            "readonly": true, 
            "sql.auto_generated": true
        }, 
        "auth_ip":
        {
            "description": "Authorized manager IPv4 address", 
            "$ref":"../../schema/common/IpAddress.json", 
            "sql.not_null": true
        }, 
        "auth_ip_mask":
        {
            "description": "IP mask defining a group of adjacent manager IP addresses", 
            "$ref":"../../schema/common/IpAddress.json"
        }, 
        "access_role":
        {
            "description": "Access Role", 
            "$ref":"../../schema/wired/AccessRole.json", 
            "default_value": "AR_MANAGER"
        }, 
        "access_method":
        {
            "description": "Access Method", 
            "$ref":"../../schema/wired/AccessMethod.json", 
            "default_value": "AM_ALL"
        }
    }
}
