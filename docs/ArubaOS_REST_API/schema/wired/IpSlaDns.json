{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "IP-SLA for DNS Configuration", 
    "title": "IpSlaDns", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "target_hostname":
        {
            "description": "Hostname of the target", 
            "type": "string", 
            "maxLength": 255, 
            "minLength": 1, 
            "sql.not_null": true
        }, 
        "name_server":
        {
            "description": "IP Address of the name server", 
            "$ref":"../../schema/common/IpAddress.json", 
            "sql.not_null": true
        }
    }
}
