{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Temperature Information", 
    "title": "TempInfo", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "temp_sensor":
        {
            "description": "Temperature Sensor", 
            "type": "string", 
            "readonly": true, 
            "sql.auto_generated": true
        }, 
        "current_temp":
        {
            "description": "Current Temperature", 
            "type": "integer", 
            "readonly": true, 
            "sql.auto_generated": true
        }, 
        "max_temp":
        {
            "description": "Max Temperature", 
            "type": "integer", 
            "readonly": true, 
            "sql.auto_generated": true
        }, 
        "min_temp":
        {
            "description": "Min Temperature", 
            "type": "integer", 
            "readonly": true, 
            "sql.auto_generated": true
        }, 
        "threshold_temp":
        {
            "description": "Threshold Temperature", 
            "type": "integer", 
            "readonly": true, 
            "sql.auto_generated": true
        }, 
        "is_over_temp":
        {
            "description": "Over Temperature Indicator. true if over temperature is detected", 
            "type": "boolean", 
            "readonly": true, 
            "sql.auto_generated": true
        }, 
        "avg_temp":
        {
            "description": "Average Temperature", 
            "type": "string", 
            "readonly": true, 
            "sql.auto_generated": true
        }
    }
}
