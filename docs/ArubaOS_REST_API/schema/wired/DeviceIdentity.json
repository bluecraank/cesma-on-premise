{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Configuration for device identity", 
    "title": "DeviceIdentity", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "device_name":
        {
            "description": "device_name", 
            "type": "string", 
            "maxLength": 20, 
            "minLength": 1, 
            "sql.not_null": true
        }, 
        "oui":
        {
            "description": "oui (organizationally unique identifier).3 byte will be used as  oui. max_value :0xFFFFFF, min_value : 0x000000", 
            "type": "string", 
            "default_value": "000000"
        }, 
        "sub_type":
        {
            "description": "sub_type", 
            "minimum": 0, 
            "maximum": 255, 
            "type": "integer", 
            "default_value": 0
        }, 
        "associated_device_profile":
        {
            "description": "Associated device_profile Name", 
            "type": "string", 
            "maxLength": 32, 
            "minLength": 1
        }, 
        "is_device_profile_enabled":
        {
            "description": "Whether type-device is enabled/disabled", 
            "type": "boolean"
        }
    }
}
