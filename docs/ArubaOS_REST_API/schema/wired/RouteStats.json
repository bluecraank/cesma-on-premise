{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Route Stats", 
    "title": "RouteStats", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "destination":
        {
            "description": "Destination IP address", 
            "$ref":"../../schema/common/IpAddress.json"
        }, 
        "mask":
        {
            "description": "Destination IP mask", 
            "$ref":"../../schema/common/IpAddress.json"
        }, 
        "ip_route_mode":
        {
            "description": "The IP route mode.", 
            "$ref":"../../schema/common/IpRouteMode.json"
        }, 
        "gateway":
        {
            "description": "The IP address of the gateway when IP route mode is IRM_GATEWAY", 
            "$ref":"../../schema/common/IpAddress.json"
        }, 
        "gateway_vlan_info":
        {
            "description": "The gateway VLAN. This is mandatory when IP route mode is IRM_VLAN.", 
            "$ref":"../../schema/common/VlanInfo.json"
        }, 
        "loopback_id":
        {
            "description": "Loopback number. This is mandatory when IP route mode is IRM_LOOPBACK.", 
            "type": "integer"
        }, 
        "vlan_id":
        {
            "description": "The destination VLAN id.", 
            "type": "integer"
        }, 
        "type":
        {
            "description": "Route Type", 
            "$ref":"../../schema/wired/RouteType.json"
        }, 
        "sub_type":
        {
            "description": "Subtype", 
            "$ref":"../../schema/wired/RouteSubType.json"
        }, 
        "metric":
        {
            "description": "The priority of the route.", 
            "type": "integer"
        }, 
        "distance":
        {
            "description": "The administrative distance to associate with this route.", 
            "type": "integer"
        }, 
        "route_name":
        {
            "description": "Name of the static route.", 
            "type": "string"
        }
    }
}
