{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "DHCP Relay VLAN configuration data.", 
    "title": "DhcpRelayVlan", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "vlan_id":
        {
            "description": "VLAN Id for which helper ip addresses to be configured", 
            "minimum": 1, 
            "maximum": 4094, 
            "type": "integer", 
            "sql.not_null": true
        }, 
        "dhcp_helper_address":
        {
            "description": "Dhcp helper address. Maximum 16 helper addresses are allowed.", 
            "$ref":"../../schema/common/IpAddress.json", 
            "sql.not_null": true
        }
    }
}
