{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "SFTP server details. Specify only one among hostname, ip-address, user or username with ip.", 
    "title": "SftpServer", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "server_address":
        {
            "description": "SFTP Server address.", 
            "$ref":"../../schema/wired/ServerAddress.json"
        }, 
        "user_name":
        {
            "description": "Username.", 
            "type": "string", 
            "maxLength": 255
        }, 
        "port_number":
        {
            "description": "TCP port number.", 
            "minimum": 1, 
            "maximum": 65535, 
            "type": "integer", 
            "default_value": 22
        }, 
        "password":
        {
            "description": "SFTP password.", 
            "type": "string", 
            "maxLength": 32, 
            "minLength": 6, 
            "sql.not_null": true
        }
    }
}
