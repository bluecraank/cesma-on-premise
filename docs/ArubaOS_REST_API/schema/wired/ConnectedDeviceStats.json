{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Connected devices reporting stats", 
    "title": "ConnectedDeviceStats", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "macAddr":
        {
            "description": "MAC address of a connected device", 
            "$ref":"../../schema/common/MacAddress.json"
        }, 
        "portName":
        {
            "description": "Port name in which this device is onboarded", 
            "type": "string"
        }, 
        "vlan":
        {
            "description": "VLAN ID that this device is in", 
            "type": "integer"
        }, 
        "ipAddr":
        {
            "description": "IP address of a connected device", 
            "$ref":"../../schema/common/IpAddress.json"
        }, 
        "userName":
        {
            "description": "User name on a connected device", 
            "type": "string"
        }, 
        "inputOct":
        {
            "description": "Input octets count", 
            "type": "integer"
        }, 
        "outputOct":
        {
            "description": "Output octets count", 
            "type": "integer"
        }, 
        "inputPkt":
        {
            "description": "Input packets count", 
            "type": "integer"
        }, 
        "outputPkt":
        {
            "description": "Output packets count", 
            "type": "integer"
        }, 
        "authType":
        {
            "description": "Connected device authentication type", 
            "$ref":"../../schema/wired/AuthType.json"
        }, 
        "connTime":
        {
            "description": "Connection time in seconds", 
            "type": "integer"
        }, 
        "pvlanType":
        {
            "description": "connected device  private vlan type", 
            "$ref":"../../schema/common/PrivateVlanType.json"
        }, 
        "dfpEntry":
        {
            "description": "Device finger printing details", 
            "$ref":"../../schema/wired/Notif_dfp_entry.json"
        }, 
        "userRoleDrv":
        {
            "description": "User role derivatives", 
            "$ref":"../../schema/wired/UserRoleDerivation.json"
        }, 
        "vlanAttr":
        {
            "description": "VLAN Derivation", 
            "type": "array", 
            "items":
            {
                "$ref":"../../schema/common/VlanAttributes.json"
            }
        }, 
        "server_ip":
        {
            "description": "Auth Server IP - ClearPass/Radius server IP", 
            "$ref":"../../schema/common/IpAddress.json"
        }, 
        "cp_entry":
        {
            "description": "Captive Portal Redirect URL", 
            "$ref":"../../schema/wired/Notif_captive_portal_entry.json"
        }, 
        "power_drawn_in_watts":
        {
            "description": "Actual power drained by the device connected to this port.", 
            "type": "number"
        }
    }
}
