{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Global DHCP Relay configuration data.", 
    "title": "DhcpRelay", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "is_dhcp_relay_enabled":
        {
            "description": "Whether the DHCP Relay is enabled.", 
            "type": "boolean", 
            "default_value": true
        }, 
        "increment_hop_count":
        {
            "description": "Increment the hop count in relayed DHCP packets", 
            "type": "boolean", 
            "default_value": true
        }
    }
}
