{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "BGP stats - Displays BGP configuration and neighbor information.", 
    "title": "BgpStats", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "local_as_number":
        {
            "description": "As Number configured in DUT", 
            "type": "integer"
        }, 
        "installed_bgp_routes":
        {
            "description": "Total BGP routes installed", 
            "type": "integer"
        }, 
        "neighbor_stats":
        {
            "description": "BGP neighbor Information", 
            "type": "array", 
            "items":
            {
                "$ref":"../../schema/wired/BgpNeighborStats.json"
            }
        }
    }
}
