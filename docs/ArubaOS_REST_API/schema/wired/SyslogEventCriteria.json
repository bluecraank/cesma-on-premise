{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "SyslogEventCriteria Configurations.", 
    "title": "SyslogEventCriteria", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "criteria_id":
        {
            "description": "event criteria id", 
            "minimum": 1, 
            "maximum": 98, 
            "type": "integer", 
            "sql.not_null": true
        }, 
        "type":
        {
            "description": "type :- REG_EXPR or EVENT_NUMBER or SEVERITY.", 
            "$ref":"../../schema/wired/EventCriteriaType.json", 
            "sql.not_null": true
        }, 
        "event_number":
        {
            "description": "Event number. Mandatory for type EVENT_NUMBER.", 
            "minimum": 1, 
            "maximum": 5500, 
            "type": "integer"
        }, 
        "reg_expr":
        {
            "description": "Regular Expression. Mandatory for type REG_EXPR.", 
            "type": "string"
        }, 
        "severity_level":
        {
            "description": "The Severity level. Mandatory for type SEVERITY.", 
            "$ref":"../../schema/wired/LoggingSeverityType.json", 
            "default_value": "MAJOR"
        }, 
        "action":
        {
            "description": "default action.", 
            "$ref":"../../schema/wired/DefaultAction.json", 
            "default_value": "PERMIT", 
            "sql.not_null": true
        }
    }
}
