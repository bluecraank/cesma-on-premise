{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "IP-SLA RTT Threshold configuration data", 
    "title": "IpSlaRtt", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "threshold_type":
        {
            "description": "Configure threshold-type for packet loss to decide when to trigger", 
            "$ref":"../../schema/wired/IpSlaThresholdType.json", 
            "sql.not_null": true
        }, 
        "consecutive_count":
        {
            "description": "Configure Number of times threshold to be hit before triggering action - Applicable if threshold_type is ISLT_CONSECUTIVE", 
            "minimum": 2, 
            "maximum": 1024, 
            "type": "integer"
        }, 
        "action_type":
        {
            "description": "Configure action to trigger when threshold is hit", 
            "$ref":"../../schema/wired/IpSlaActionType.json", 
            "sql.not_null": true
        }, 
        "threshold_upper":
        {
            "description": "Configure upper threshold limit", 
            "minimum": 1, 
            "maximum": 1024, 
            "type": "integer", 
            "sql.not_null": true
        }, 
        "threshold_lower":
        {
            "description": "Configure lower threshold limit", 
            "minimum": 1, 
            "maximum": 1024, 
            "type": "integer", 
            "sql.not_null": true
        }
    }
}
