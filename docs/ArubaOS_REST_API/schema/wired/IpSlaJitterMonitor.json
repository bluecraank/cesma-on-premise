{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Monitor for Jitter", 
    "title": "IpSlaJitterMonitor", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "threshold_type":
        {
            "description": "Configure threshold-type to decide when to trigger the action", 
            "$ref":"../../schema/wired/IpSlaThresholdType.json", 
            "sql.not_null": true
        }, 
        "action_type":
        {
            "description": "Configure action to trigger when threshold is hit", 
            "$ref":"../../schema/wired/IpSlaActionType.json", 
            "sql.not_null": true
        }, 
        "threshold_upper":
        {
            "description": "Configure upper threshold limit", 
            "minimum": 1, 
            "maximum": 1024, 
            "type": "integer", 
            "sql.not_null": true
        }, 
        "threshold_lower":
        {
            "description": "Configure lower threshold limit", 
            "minimum": 1, 
            "maximum": 1024, 
            "type": "integer", 
            "sql.not_null": true
        }
    }
}
