{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "IP ICMP configuration data.", 
    "title": "IpIcmp", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "icmp_addrmask":
        {
            "description": "ICMP address mask configuration - ON/OFF.", 
            "type": "boolean"
        }, 
        "icmp_redirects":
        {
            "description": "ICMP redirects configuration - ON/OFF.", 
            "type": "boolean", 
            "default_value": true
        }, 
        "icmp_echo_bcast_req":
        {
            "description": "ICMP echo broadcast request configuration - ON/OFF.", 
            "type": "boolean", 
            "default_value": true
        }, 
        "icmp_unreachable":
        {
            "description": "ICMP unreachable configuration - ON/OFF.", 
            "type": "boolean", 
            "default_value": true
        }, 
        "icmp_reply_limit":
        {
            "description": "ICMP reply limit configuration - ON/OFF.", 
            "type": "boolean"
        }, 
        "icmp_burst_normal":
        {
            "description": "ICMP burst normal configuration. The maximum number of icmp replies to send per second when icmp reply limit is ON.", 
            "minimum": 0, 
            "maximum": 1000000, 
            "type": "integer", 
            "default_value": 1000
        }
    }
}
