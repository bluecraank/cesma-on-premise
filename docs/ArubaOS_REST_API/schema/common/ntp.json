{
  "title": "ntp",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "broadcast": {
      "type": "boolean",
      "default": true,
      "description": "Operate in broadcast mode."
    },
    "unicast": {
      "type": "boolean",
      "default": false,
      "description": "Operate in unicast mode."
    },
    "max-association": {
      "type": "object",
      "properties": {
        "cmd_no_form": {
          "type": "boolean",
          "default": false
        },
        "max-association_value": {
          "type": "integer",
          "default": 8,
          "minimum": 1,
          "maximum": 8
        }
      },
      "required": [
        "max-association_value"
      ],
      "description": "Maximum number of Network Time Protocol (NTP) associations."
    },
    "enable": {
      "type": "boolean",
      "default": false,
      "description": "Enable/disable NTP."
    },
    "trap": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cmd_no_form": {
            "type": "boolean",
            "default": false
          },
          "trap_value": {
            "type": "string",
            "enum": [
              "ntp-Mode-Change",
              "ntp-Stratum-Change",
              "ntp-Peer-Change",
              "ntp-New-Association",
              "ntp-Remove-Association",
              "ntp-Config-Change",
              "ntp-LeapSec-announced",
              "Ntp-alive-Heartbeat",
              "all"
            ]
          }
        },
        "required": [
          "trap_value"
        ]
      },
      "description": "Enable/disable NTP traps."
    },
    "uri": {
      "type": "string",
      "description": "The URI of the configuration entity",
      "readOnly": true
    }
  },
  "anyOf": [
    {
      "required": [
        "broadcast"
      ],
      "not": {
        "required": [
          "unicast"
        ]
      }
    },
    {
      "required": [
        "unicast"
      ],
      "not": {
        "required": [
          "broadcast"
        ]
      }
    },
    {
      "required": [
        "max-association"
      ]
    },
    {
      "required": [
        "enable"
      ]
    },
    {
      "required": [
        "trap"
      ]
    }
  ]
}