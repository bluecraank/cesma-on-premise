{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "LLDP Civic Address", 
    "title": "LldpCivicAddress", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "country_code":
        {
            "description": "Country Code", 
            "type": "string", 
            "maxLength": 2, 
            "minLength": 2, 
            "sql.not_null": true
        }, 
        "what_number":
        {
            "description": "What Number", 
            "minimum": 0, 
            "maximum": 2, 
            "type": "integer", 
            "sql.not_null": true
        }, 
        "ca_details":
        {
            "description": "We can configure multiple CAs till we reach the max TLV length", 
            "type": "array", 
            "minItems": 1, 
            "items":
            {
                "$ref":"../../schema/common/LldpCaDetails.json"
            }, 
            "sql.not_null": true
        }
    }
}
