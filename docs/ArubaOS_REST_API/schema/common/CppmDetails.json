{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Username and password combination of CPPM which is used to login to CPPM to download user roles.", 
    "title": "CppmDetails", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "username":
        {
            "description": "Username of the CPPM.", 
            "type": "string", 
            "maxLength": 255, 
            "minLength": 1, 
            "sql.not_null": true
        }, 
        "password":
        {
            "description": "Password of the CPPM.", 
            "type": "string", 
            "maxLength": 64, 
            "minLength": 8
        }
    }
}
