{
    "$schema": "http://json-schema.org/draft-04/schema#", 
    "description": "Wraps the IP address and/or name of a network host.", 
    "title": "NetworkHost", 
    "type": "object", 
    "properties":
    {
        "uri":
        {
            "description": "The URI of the configuration entity", 
            "type": "string", 
            "readonly": true
        }, 
        "ip_address":
        {
            "description": "Host IP address.", 
            "$ref":"../../schema/common/IpAddress.json"
        }, 
        "hostname":
        {
            "description": "Hostname.", 
            "type": "string", 
            "maxLength": 32, 
            "minLength": 1
        }
    }
}
